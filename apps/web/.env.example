# =============================================================================
# Digital Menu - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
# Neon PostgreSQL connection string
# Get yours at: https://neon.tech
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# -----------------------------------------------------------------------------
# Authentication (Required)
# -----------------------------------------------------------------------------
# NextAuth.js configuration
# Generate secret with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (Optional - for Google sign-in)
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# Image Storage (Required for image uploads)
# -----------------------------------------------------------------------------
# Cloudinary - https://cloudinary.com (free tier available)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""

# -----------------------------------------------------------------------------
# Real-time Updates (Optional)
# -----------------------------------------------------------------------------
# Pusher - https://pusher.com (free tier available)
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="eu"
NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER="eu"

# -----------------------------------------------------------------------------
# Caching (Optional but recommended)
# -----------------------------------------------------------------------------
# Upstash Redis - https://upstash.com (free tier available)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# -----------------------------------------------------------------------------
# Email (Optional)
# -----------------------------------------------------------------------------
# Resend - https://resend.com (free tier available)
RESEND_API_KEY=""

# -----------------------------------------------------------------------------
# Error Tracking (Optional but recommended for production)
# -----------------------------------------------------------------------------
# Sentry - https://sentry.io (free tier available)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
# Sentry organization and project (for source maps upload in CI)
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# Google Analytics - https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Digital Menu"
